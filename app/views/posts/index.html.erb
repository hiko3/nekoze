<div class="jumbotron">
	<h1 class="display-4">ようこそnekozeへ</h1>
	<p class="lead">サイトの説明を入れます</p>
</div>

<div class="container">
	<div class= "row">
		<% @posts.each do |post| %>
			<div class="card">
				<div class="card-header">
					投稿者: <%= link_to post.user.name, user_path(post.user) %>
				</div>

				<div class="card-body">
					<div class="col-md-1">
						<%= link_to post.title, post_path(post), class: "text-nowrap" %>
					</div>
					<div class="col-md-3">
						<%= link_to post_path(post) do %>
							<% post.photos.each do |photo| %>
								<%= attachment_image_tag photo, :image, :fill, 200, 200 %>
							<% end %>
						<% end %>

							<% if post.liked_by?(current_user).present? %>
								<%= link_to post_like_path(post,post.liked_by?(current_user)), method: :delete do %>
									<i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
									<span class="text-nowrap"><%= post.likes.count %> いいね</span>
								<% end %>
							<% else %>
								<%= link_to post_likes_path(post), method: :post do %>
									<i class="fa fa-heart-0" aria-hidden="true" ></i>
									<span class="text-nowrap"><%= post.likes.count %> いいね</span>
								<% end %>
							<% end %>
					</div>
						<span class="bg bg-success"><%= post.genre %></span>
				</div>
			</div>
		<% end %>
	</div>
</div>