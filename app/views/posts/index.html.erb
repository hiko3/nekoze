<div class="jumbotron">
	<h1 class="display-4">ようこそnekozeへ</h1>
	<p class="lead">サイトの説明を入れます</p>
</div>

<div class="container">
	<div class= "row">
		<!-- <div class="col-md-1">
			<%#= render 'posts/rank', ranks: @rank %>
		</div> -->
			<% @posts.each do |post| %>
				<div class="card col-md-3">
					<div class="card-header">
						投稿者: <%= link_to post.user.name, user_path(post.user) %>
					</div>

					<div class="card-body">
						<!-- <div class="col-md-3"> -->
							<p><%= link_to post.title, post_path(post), class: "text-nowrap" %></p>
						<!-- </div>
						<div class="col-md-3"> -->
							<%= link_to post_path(post) do %>
								<%= attachment_image_tag post, :image, :fill, 200, 200 %>
							<% end %>
						<!-- </div> -->
							<% if post.catname.present? %>
							<p><span class="bg bg-success text-white" ><%= post.catname %></span></p>
							<% end %>
					</div>
				</div>
			<% end %>
	</div>
</div>
