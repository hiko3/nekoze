<div class="container">
	<div class="card pl-5 mt-3 bg-light">
		<div class="row mt-5">
			<div class= "col-md-4">
				<h2><%= @post.title %></h2>
				<p><%= @post.body %></p>
				<% if @post.user == current_user %>
					<%= link_to "編集", edit_post_path(@post) %>
				<% end %>
			</div>
			<div class="col-md-8">
				<% @post.photos.each do |photo| %>
					<%= attachment_image_tag photo, :image, :fill, 400, 400 %>
				<% end %>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<% if @post.liked_by?(current_user).present? %>
					<%= link_to post_like_path(@post), method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
						<span class="text-nowrap"><%= @post.likes.count %> いいね</span>
					<% end %>
				<% else %>
					<%= link_to post_likes_path(@post), method: :post do %>
						<i class="fa fa-heart-0" aria-hidden="true" ></i>
						<span class="text-nowrap"><%= @post.likes.count %> いいね</span>
					<% end %>
				<% end %>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<% @post.comments.each do |comment| %>
					<%= comment.user.name %>
					<%= comment.created_at.strftime('%Y/%m/%d') %>
					<%= comment.comment %>
				<% end %>

				<%= form_for [@post, @comment] do |f| %>
					<%= f.text_area :comment, class: "form-control w-75", placeholder: "コメントを入力" %>
					<%= f.submit "送信する", class: "btn btn-outline-dark my-3" %>
				<% end %>
			</div>
		</div>
	</div>
</div>

