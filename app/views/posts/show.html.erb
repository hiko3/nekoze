<div class="container">
	<div class="row mt-5">
		<div class= "col-md-3">
			<p><%= @post.title %></p>
			<p><%= @post.body %></p>
			<% if @post.user == current_user %>
				<%= link_to "編集", edit_post_path(@post) %>
			<% end %>
		</div>
		<div class="col-md-9">
			<% @post.photos.each do |photo| %>
				<%= attachment_image_tag photo, :image, :fill, 200, 200 %>
			<% end %>
		</div>
	</div>
</div>
