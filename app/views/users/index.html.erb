<div class="container">
	<div class="searchbox mt-3">
			<%= search_form_for @user_search , url: users_path do |f| %>
				<%= f.text_field :name_cont, placeholder: "ユーザーを検索..." %>
				<%= f.submit "検索", class: 'btn btn-light btn-sm' %>
			<% end %>
		</div>
	<div class="row mt-5">
		<% @search_users.each do |user| %>
			<div class="col-md-4">
				<div class="card p-3 mr-5 mb-3">
					<div class="card-header">
						<%= link_to user_path(user) do %>
							<span class="text-nowrap mr-5"><%= user.name %></span>
						<% end %>
						<% if current_user != user %>
							<% if user.followed_by?(current_user) %>
								<%= link_to "フォロー解除", user_relationship_path(user, Relationship.find_by(follower_id: user.id, following_id: current_user.id)),method: :delete, class: "btn btn-primary btn-small" %>
							<% else %>
								<%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-primary" %>
							<% end %>
						<% end %>
					</div>
					<div class="card-body">
						<%= link_to user_path(user) do %>
							<%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no-image-user.png", size: '50x50' %>
						<% end %>
							<%= user.introduction.truncate(20, omission:'...') %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	<div class="d-flex justify-content-end">
		<%=paginate @search_users, class: "paginate" %>
	</div>
</div>
