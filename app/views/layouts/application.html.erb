<!DOCTYPE html>
<html>
  <head>
    <title>Nekoze</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="#">nekoze</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">投稿一覧</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">ユーザー一覧</a>
                </li>
                <li class="nav-item">
                    <%= link_to "新規投稿", new_post_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "マイページ", user_path(current_user), class: "nav-link" %>
                </li>
            </ul>
        </div>
      </div>
    </nav>
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

    <div class = "container">
    <%= yield %>
    </div>
  </body>
</html>
