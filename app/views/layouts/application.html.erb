<!DOCTYPE html>
<html>
  <head>
    <title>Nekoze</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <link rel="stylesheet" href="style.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to "nekoze", root_path, class: "navbar-brand" %>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
              <% if user_signed_in? %>

                <li class="nav-item">
                    <%= link_to "投稿一覧" , posts_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "ユーザーリスト" , users_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "新規投稿", new_post_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "マイページ", user_path(current_user), class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "ログアウト",  destroy_user_session_path, method: :delete, data: {confirm: 'ログアウトしてよろしいですか？',cancel: 'やめる', commit: 'ログアウトする'}, title: '確認', class: "nav-link" %>
                </li>

              <% else %>

                <li class="nav-item">
                    <%= link_to "投稿一覧" , posts_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
                </li>
              <% end %>
            </ul>
        </div>
      </div>
    </nav>
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

    <%= yield %>

  </body>
</html>
