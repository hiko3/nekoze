<div class="d-flex justify-content-center mt-5" >
  <div class="card text-dark w-75 m-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="card-header bg-dark text-center text-white">
      ログイン
    </div>

    <div class="card-body bg-light">
       <%= render 'layouts/error_messages', model: f.object %>
      <div class="field">
        <%= f.label :メールアドレス, class: "mt-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", class: "form-control w-75" %>
      </div>

      <div class="field">
        <%= f.label :パスワード, class: "mt-3" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力", class: "form-control w-50" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "mt-3 btn btn-dark" %>
        <%= link_to "会員登録はこちら", new_registration_path(resource_name), class: "mt-3" %>
      </div>

    </div>
  <% end %>
  </div>
</div>
